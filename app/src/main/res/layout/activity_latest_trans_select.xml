<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Latest.LatestTransSelectActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/latestSelect_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bottom_storke_toolbar"
            android:elevation="6dp"
            android:paddingHorizontal="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/aspace"
                android:text="번역 기록"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="19sp" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/latestSelect_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view_radius_setting"
                android:elevation="5dp"
                android:fontFamily="@font/aspace"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="한국어"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:text=">"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/latestSelect_toLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/view_radius_setting"
                android:elevation="5dp"
                android:fontFamily="@font/aspace"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="영어"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <TextView
                android:layout_marginHorizontal="10dp"
                android:id="@+id/latestSelect_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@drawable/view_radius_storke"
                android:elevation="5dp"
                android:gravity="top"
                android:hint="인풋"
                android:padding="20dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:layout_marginHorizontal="10dp"

                android:id="@+id/latestSelect_output"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/view_radius_storke"
                android:elevation="5dp"
                android:gravity="top"
                android:padding="20dp"
                android:text="번역"
                android:textColor="#000"
                android:textSize="20sp" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

</LinearLayout>